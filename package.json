{
  "name": "workscene",
  "displayName": "Workscene",
  "description": "Xcode-style logical groups without touching the filesystem. Drag from Explorer, persist in workscene.config.json.",
  "keywords": ["virtual groups","folderless","explorer","xcode groups","project groups","virtual folders"],
  "version": "0.3.0",
  "license": "AGPL-3.0-only",
  "publisher": "sourcebound",
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.84.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sourcebound/workscene.git"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "_moduleAliases": {
    "@": "out",
    "@lib": "out/lib",
    "@model": "out/model",
    "@util": "out/util",
    "@type": "out/type"
  },
  "contributes": {
    "colors": [
      {
        "id": "workscene.color.custom1",
        "description": "Workscene custom color slot 1",
        "defaults": {
          "dark": "#FF8A00",
          "light": "#FF8A00",
          "highContrast": "#FF8A00"
        }
      },
      {
        "id": "workscene.color.custom2",
        "description": "Workscene custom color slot 2",
        "defaults": {
          "dark": "#E91E63",
          "light": "#E91E63",
          "highContrast": "#E91E63"
        }
      },
      {
        "id": "workscene.color.custom3",
        "description": "Workscene custom color slot 3",
        "defaults": {
          "dark": "#9C27B0",
          "light": "#9C27B0",
          "highContrast": "#9C27B0"
        }
      },
      {
        "id": "workscene.color.custom4",
        "description": "Workscene custom color slot 4",
        "defaults": {
          "dark": "#3F51B5",
          "light": "#3F51B5",
          "highContrast": "#3F51B5"
        }
      },
      {
        "id": "workscene.color.custom5",
        "description": "Workscene custom color slot 5",
        "defaults": {
          "dark": "#03A9F4",
          "light": "#03A9F4",
          "highContrast": "#03A9F4"
        }
      },
      {
        "id": "workscene.color.custom6",
        "description": "Workscene custom color slot 6",
        "defaults": {
          "dark": "#009688",
          "light": "#009688",
          "highContrast": "#009688"
        }
      },
      {
        "id": "workscene.color.custom7",
        "description": "Workscene custom color slot 7",
        "defaults": {
          "dark": "#4CAF50",
          "light": "#4CAF50",
          "highContrast": "#4CAF50"
        }
      },
      {
        "id": "workscene.color.custom8",
        "description": "Workscene custom color slot 8",
        "defaults": {
          "dark": "#8BC34A",
          "light": "#8BC34A",
          "highContrast": "#8BC34A"
        }
      },
      {
        "id": "workscene.color.custom9",
        "description": "Workscene custom color slot 9",
        "defaults": {
          "dark": "#CDDC39",
          "light": "#CDDC39",
          "highContrast": "#CDDC39"
        }
      },
      {
        "id": "workscene.color.custom10",
        "description": "Workscene custom color slot 10",
        "defaults": {
          "dark": "#FFC107",
          "light": "#FFC107",
          "highContrast": "#FFC107"
        }
      }
    ],
    "keybindings": [
      {
        "command": "workscene.renameGroup",
        "key": "enter",
        "when": "focusedView == worksceneView && workscene.focusedKind == group"
      },
      {
        "command": "workscene.renameGroup",
        "key": "f2",
        "when": "focusedView == worksceneView && workscene.focusedKind == group"
      },
      {
        "command": "workscene.remove",
        "key": "backspace",
        "when": "view == worksceneView && viewItem == group"
      },
      {
        "command": "workscene.remove",
        "key": "backspace",
        "when": "view == worksceneView && viewItem == file"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "worksceneView",
          "name": "Workscene",
          "contextualTitle": "Workscene",
          "visibility": "visible",
          "icon": "$(folder-library)"
        }
      ]
    },
    "commands": [
      {
        "command": "workscene.addToGroupFromExplorer",
        "title": "Gruba Ekle...",
        "icon": "$(add)"
      },
      {
        "command": "workscene.addFiles",
        "title": "Ekle...",
        "icon": "$(symbol-reference)"
      },
      {
        "command": "workscene.addGroup",
        "title": "Yeni Grup...",
        "icon": "$(new-folder)"
      },
      {
        "command": "workscene.addOpenTabsToGroup",
        "title": "Sekmeleri Gruba Ekle...",
        "icon": "$(newline)"
      },
      {
        "command": "workscene.addSubGroup",
        "title": "Yeni Alt Grup...",
        "icon": "$(new-folder)"
      },
      {
        "command": "workscene.renameGroup",
        "title": "Yeniden Adlandır",
        "icon": "$(whole-word)"
      },
      {
        "command": "workscene.editGroupMeta",
        "title": "Grup Adı/Açıklama Düzenle",
        "icon": "$(edit)"
      },
      {
        "command": "workscene.remove",
        "title": "Kaldır",
        "icon": "$(trashcan)"
      },
      {
        "command": "workscene.moveToGroup",
        "title": "Şu Gruba Taşı..."
      },
      {
        "command": "workscene.editFileMeta",
        "title": "Dosya Takma Adı/Açıklama/Etiketleri Düzenle",
        "icon": "$(edit)"
      },
      {
        "command": "workscene.editFileTags",
        "title": "Dosya Etiketlerini Düzenle...",
        "icon": "$(tag)"
      },
      {
        "command": "workscene.refresh",
        "title": "Yenile",
        "icon": "$(refresh)"
      },
      {
        "command": "workscene.saveNow",
        "title": "Kaydet"
      },
      {
        "command": "workscene.sortGroup",
        "title": "Sırala",
        "icon": "$(sort-precedence)"
      },
      {
        "command": "workscene.filterGroups",
        "title": "Filtrele",
        "icon": "$(filter)"
      },
      {
        "command": "workscene.clearFilter",
        "title": "Filtreyi Temizle",
        "icon": "$(clear-all)"
      },
      {
        "command": "workscene.changeGroupIcon",
        "title": "Simgeyi Değiştir",
        "icon": "$(package)"
      },
      {
        "command": "workscene.changeGroupColor",
        "title": "Renk Değiştir",
        "icon": "$(paintcan)"
      },
      {
        "command": "workscene.editGroupTags",
        "title": "Etiketleri Düzenle...",
        "icon": "$(tag)"
      },
      {
        "command": "workscene.export",
        "title": "Dışa Aktar",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "workscene.import",
        "title": "İçe Aktar",
        "icon": "$(cloud-download)"
      },
      {
        "command": "workscene.undoCloseEditors",
        "title": "Kapatılan Dosyaları Geri Al",
        "icon": "$(history)"
      },
      {
        "command": "workscene.applyTagFilter",
        "title": "Etikete Göre Filtrele",
        "category": "Workscene"
      },
      {
        "command": "workscene.clearTagFilter",
        "title": "Etiket Filtresini Temizle",
        "category": "Workscene",
        "icon": "$(clear-all)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "workscene.addGroup",
          "when": "view == worksceneView",
          "group": "navigation@1"
        },
        {
          "command": "workscene.refresh",
          "when": "view == worksceneView",
          "group": "navigation@9"
        },
        {
          "command": "workscene.saveNow",
          "when": "view == worksceneView && workscene.canSave",
          "group": "secondary"
        },
        {
          "command": "workscene.filterGroups",
          "when": "view == worksceneView && !workscene.hasFilter",
          "group": "navigation@2"
        },
        {
          "command": "workscene.clearFilter",
          "when": "view == worksceneView && workscene.hasFilter",
          "group": "navigation@2"
        },
        {
          "command": "workscene.export",
          "when": "view == worksceneView",
          "group": "secondary@1"
        },
        {
          "command": "workscene.import",
          "when": "view == worksceneView",
          "group": "secondary@2"
        },
        {
          "command": "workscene.undoCloseEditors",
          "when": "view == worksceneView && workscene.canUndoClose",
          "group": "secondary@3"
        }
      ],
      "view/item/context": [
        {
          "command": "workscene.addSubGroup",
          "when": "view == worksceneView && viewItem == group && workscene.action.add-subgroup",
          "group": "inline@1"
        },
        {
          "command": "workscene.addFiles",
          "when": "view == worksceneView && viewItem == group",
          "group": "navigation@2"
        },
      {
        "command": "workscene.renameGroup",
        "when": "view == worksceneView && viewItem == group",
        "group": "navigation@3"
      },
      {
        "command": "workscene.editGroupMeta",
        "when": "view == worksceneView && viewItem == group",
        "group": "navigation@3.5"
      },
        {
          "command": "workscene.addOpenTabsToGroup",
          "when": "view == worksceneView && viewItem == group",
          "group": "navigation@4"
        },
        {
          "command": "workscene.sortGroup",
          "when": "view == worksceneView && viewItem == group",
          "group": "navigation@5"
        },
        {
          "command": "workscene.changeGroupIcon",
          "when": "view == worksceneView && viewItem == group",
          "group": "navigation@6"
        },
        {
          "command": "workscene.changeGroupColor",
          "when": "view == worksceneView && viewItem == group",
          "group": "navigation@7"
        },
        {
          "command": "workscene.editGroupTags",
          "when": "view == worksceneView && viewItem == group",
          "group": "navigation@8"
        },
        {
          "command": "workscene.remove",
          "when": "view == worksceneView && viewItem == group && workscene.action.remove",
          "group": "inline@8"
        },
        {
          "command": "workscene.addSubGroup",
          "when": "view == worksceneView && viewItem == group",
          "group": "navigation@1"
        },
        {
          "command": "workscene.moveToGroup",
          "when": "view == worksceneView && viewItem == file"
        },
      {
        "command": "workscene.editFileMeta",
        "when": "view == worksceneView && viewItem == file",
        "group": "navigation@1"
      },
      {
        "command": "workscene.editFileTags",
        "when": "view == worksceneView && viewItem == file",
        "group": "navigation@1.1"
      },
        {
          "command": "workscene.remove",
          "when": "view == worksceneView && viewItem == file"
        },
        {
          "command": "workscene.remove",
          "when": "view == worksceneView && viewItem == group"
        }
      ],
      "commandPalette": [
        {
          "command": "workscene.applyTagFilter",
          "when": "false"
        },
        {
          "command": "workscene.clearTagFilter",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "command": "workscene.addToGroupFromExplorer",
          "when": "resourceScheme == file",
          "group": "navigation@99"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "worksceneView",
        "contents": "Henüz bir grup yok. [Yeni Grup Ekle](command:workscene.addGroup)"
      }
    ],
    "configuration": {
      "title": "Workscene",
      "properties": {
        "workscene.autoCloseOnOpenAll": {
          "type": "boolean",
          "default": false,
          "description": "When opening all files in a group, close existing editors first and allow undo for 5 seconds."
        },
        "workscene.confirmBeforeRemove": {
          "type": "boolean",
          "default": true,
          "description": "Show a confirmation dialog before removing a group or removing a file from a group."
        },
        "workscene.itemAccessoryActionIds": {
          "type": "array",
          "default": [
            "add-subgroup",
            "remove"
          ],
          "items": {
            "type": "string"
          },
          "description": "Which inline buttons are visible for group items (only affects inline, not context menu). Valid ids: add-subgroup, remove."
        },
        "workscene.extraColors": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Additional themable color IDs to offer in the group color picker (e.g. 'editorWarning.foreground', 'charts.orange')."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node esbuild.config.js",
    "watch": "node esbuild.config.js --watch",
    "format": "prettier --write \"{src,*.{json,md}}\"",
    "format:check": "prettier --check \"{src,*.{json,md}}\"",
    "lint": "node ./node_modules/eslint/bin/eslint.js --ext .ts src",
    "lint:fix": "node ./node_modules/eslint/bin/eslint.js --ext .ts src --fix",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config jest.config.ts",
    "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch --config jest.config.ts"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.17",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "esbuild": "^0.25.10",
    "esbuild-plugin-tsconfig-paths": "^1.0.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "jest": "^29.7.0",
    "jest-util": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.3",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "case": "^1.6.3",
    "change-case": "^5.4.4",
    "module-alias": "^2.2.3",
    "uuid": "^11.1.0"
  }
}
