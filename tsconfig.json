{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "outDir": "out",
    "rootDir": "src",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["vscode", "node"],
    "paths": {
      "@/*": ["./src/*"],
      "@lib/*": ["./src/lib/*"],
      "@type/*": ["./src/type/*"],
      "@util/*": ["./src/util/*"],
      "@model/*": ["./src/model/*"],
      "@enumeration/*": ["./src/enumeration/*"]
    }
  },

  "include": ["src/**/*", "tests/util/icon.ts"]
}
